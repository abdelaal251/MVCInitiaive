@model IEnumerable<MVCDemo.Models.Instructor>

<h2>
    Instructors
    <a asp-action="Create" class="btn btn-success float-right">Create New</a>
</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Salary</th>
            <th>Department</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.Name</td>
            <td>@instructor.Salary.ToString("C")</td>
            <td>@instructor.Department.Name</td>
            <td>@instructor.Course.Name</td>
            <td>
                <a asp-action="Details" asp-route-id="@instructor.Id" class="btn btn-primary btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@instructor.Id" class="btn btn-warning btn-sm">Edit</a>
                <form asp-action="Delete" asp-route-id="@instructor.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this instructor?');">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
